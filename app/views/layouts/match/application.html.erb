<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'match/application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'match/application', 'data-turbolinks-track': true %>
  </head>
  <body>
    <main class="container-fluid">
      <div class="row">
        <div id="box-sidebar" class="col-xs-2">
          <%= render 'layouts/match/sidebar' %>
        </div>

        <div id="main-content" class="col-xs-10">
          <%= render "shared/flash_message" %>

          <%= yield %>
        </div>
      </div>
    </main>
  </body>
</html>
