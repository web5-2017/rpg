<% provide(:header, "Partidas que estou Jogando") %>
<% provide(:title, "Partidas que estou jogando") %>

<div class="panel panel-default">
  <div class="panel-body">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Mestre</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @games.each do |game| %>
          <tr>
            <td> <%= game.name %> </td>
            <td> <%= game.user.name %> </td>
            <td> <%= link_to "entrar na partida", match_game_path(game) , class: 'btn btn-primary' %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
