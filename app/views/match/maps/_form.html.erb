<%= simple_form_for [:match, @history, @map], :remote => true do |f| %>
  <%= f.input :json_map, as: :hidden %>

  <div class="row">
    <div class="col-xs-6">
      <%= f.input :rows %>
    </div>

    <div class="col-xs-6">
      <%= f.input :columns %>
    </div>
  </div>

  <div id="new-components">
    <div class="form-group">
      <label for="component_name">Nome do Componente</label>
      <input type="text" class="form-control" id="component_name">
    </div>
    <div class="form-group">
      <label for="component_color">Cor do Componente</label>
      <input type="text" class="minicolors" id="component_color">
    </div>

    <button type="button" name="button" class="btn btn-default">Adicionar componente</button>
  </div>

  <div id="components" data-component=""></div>
  <div id="active-component"></div>
  <%= f.submit 'Salvar Mapa' , class: 'btn btn-primary' %>
<% end %>
