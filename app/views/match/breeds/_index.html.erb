<p id="notice"><%= notice %></p>

<h1>Breeds</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @breeds.each do |breed| %>
      <tr>
        <td><%= breed.name %></td>
        <td><%= breed.description %></td>
        <td><%= link_to 'Show', [:match, @history, breed] %></td>
        <td><%= link_to 'Edit', edit_match_history_breed_path(@history, breed) %></td>
        <td><%= link_to 'Destroy', [:match, @history, breed], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Breed', new_match_history_breed_path(@history) %>
