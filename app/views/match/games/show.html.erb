<% provide(:header, "Partida #{@game.name}") %>

<ul class="nav nav-tabs">
  <li role="presentation" class="active"><a href="#">Histórias</a></li>
</ul>

<section id="tab-content">

  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <h4 class="pull-left">Histórias</h4>
      <%= link_to "Adicionar uma Historia", match_game_histories_path(@game),
          class: "btn btn-primary pull-right" %>
    </div>

    <div class="panel-body">
      <%= render 'match/histories/table' %>
    </div>
  </div>

</section>
